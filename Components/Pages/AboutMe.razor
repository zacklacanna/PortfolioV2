@using System.Globalization

<section id="aboutme" class="py-5 section-bg" aria-label="aboutme">
    <div class="about-me">
        
        <div class="blurb-content p-4">
            <div class="profile-top mb-3">

                <img src="zack-profile.png" alt="" class="avatar"/>

                <div class="profile-header mb-2">

                    <h1>@Name</h1>
                    <p class="meta">@GenerateAge() years old â€¢ @Location</p>

                    <div class="d-flex flex-wrap mt-2">
                        @foreach (var tech in Technologies)
                        {
                            <div class="badge tech-badge me-2 mb-2">@tech</div>
                        }
                    </div>
                </div>

            </div>

            <div class="profile-bio">
                <p class="description-text blurb-description">
                    @string.Join(" ", resumeLines)
                </p>

            </div>
        </div>
    </div>
</section>


@code {

    string Name = "Zack LaCanna";
    string Location = "Scottsdale, Arizona";

    List<string> Technologies { get; set; } = new()
    {
        "C#", "Python", "AI", "Full-Stack", "Cloud Computing", "SaaS"
    };

    private int CalculateAge(DateTime birthDate)
    {
        var today = DateTime.Today;
        var age   = today.Year - birthDate.Year;
        if (today < birthDate.AddYears(age)) age--;
        return age;
    }

    private string GenerateAge()
    {
        return CalculateAge(DateTime.ParseExact("08-11-2001","MM-dd-yyyy",CultureInfo.InvariantCulture)).ToString();
    }

    private List<string> resumeLines = new()
    {
        "I'm a full-stack software engineer with expertise in building scalable web applications and cloud-native solutions.",
        "I specialize in C#, C++, Python, and JavaScript development, with extensive experience architecting Blazor Web Apps, REST APIs, and AWS cloud services including Lambda, API Gateway, and DynamoDB.",
        "I develop robust backend applications and SaaS platforms using C#, C++, Java, and VB.NET, focusing on API integrations, data processing, and multi-platform scalability.",
        "My recent work involves developing enterprise SaaS platforms that integrate machine learning capabilities using TensorFlow, computer vision with OCR, and real-time data processing systems.",
        "I have a proven track record of delivering high-impact solutions that achieve significant performance improvements, from automated sorting systems with 500% efficiency gains to streamlined mobile app experiences with 300% user engagement improvements.",
        "I thrive on solving complex technical challenges and creating seamless integrations between diverse systems while maintaining scalability and security standards."
    };

}